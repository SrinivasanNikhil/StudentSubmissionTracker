<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">My Profile</h4>
            </div>
            <div class="card-body">
                <% if (locals.success) { %>
                    <div class="alert alert-success mb-4" id="successAlert">
                        <%= success %>
                    </div>
                    <script>
                        // Auto hide success message after 3 seconds
                        setTimeout(() => {
                            const alert = document.getElementById('successAlert');
                            if (alert) {
                                alert.style.display = 'none';
                            }
                        }, 3000);
                    </script>
                    <% } %>

                        <form action="/profile/update" method="POST">
                            <div class="mb-4">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" value="<%= user.email %>" readonly
                                    disabled>
                                <div class="form-text text-muted">Your email address cannot be changed.</div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <input type="text" class="form-control" id="firstName" name="firstName"
                                        value="<%= user.firstName %>" placeholder="Enter your first name">
                                </div>
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" id="lastName" name="lastName"
                                        value="<%= user.lastName %>" placeholder="Enter your last name">
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="code" class="form-label">Code</label>
                                <input type="text" class="form-control" id="code" name="code" value="<%= user.code %>"
                                    placeholder="Enter your code">
                                <div class="form-text text-muted">You can set or change your code here.</div>
                            </div>

                            <div class="mb-4 border-top pt-4">
                                <h5>Account Information</h5>
                                <p class="text-muted">You are registered with the email: <strong>
                                        <%= user.email %>
                                    </strong></p>
                                <p class="text-muted">
                                    <% if (user.firstName && user.lastName) { %>
                                        Your name is set to: <strong>
                                            <%= user.firstName %>
                                                <%= user.lastName %>
                                        </strong>
                                        <% } else if (user.firstName) { %>
                                            Your first name is set to: <strong>
                                                <%= user.firstName %>
                                            </strong>
                                            <% } else if (user.lastName) { %>
                                                Your last name is set to: <strong>
                                                    <%= user.lastName %>
                                                </strong>
                                                <% } else { %>
                                                    You haven't set your name yet.
                                                    <% } %>
                                </p>
                                <% if (user.code) { %>
                                    <p class="text-muted">Your code is set to: <strong>
                                            <%= user.code %>
                                        </strong></p>
                                    <% } else { %>
                                        <p class="text-muted">You haven't set a code yet.</p>
                                        <% } %>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>
            </div>
        </div>
    </div>
</div>