<div class="container mt-4">
    <div class="mx-auto" style="max-width: 1200px; margin-left: 2rem; margin-right: 2rem;">
        <div class="text-center mb-5">
            <h1 class="display-4 mb-3">SQL Topics</h1>
            <p class="lead text-muted">Select a topic to view practice questions</p>
        </div>

        <div class="row g-4">
            <% if (topics && topics.length> 0) { %>
                <% topics.forEach(topic=> { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm hover-shadow">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-3">
                                    <i class="bi bi-database me-2"></i>
                                    <%= topic.name %>
                                </h5>
                                <p class="card-text text-muted flex-grow-1">
                                    Practice questions related to <%= topic.name.toLowerCase() %> in SQL.
                                </p>
                                <div class="mt-auto">
                                    <a href="/questions/topic/<%= topic.id %>" class="btn btn-primary w-100">
                                        View Questions
                                        <i class="bi bi-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No topics available at the moment. Please check back later.
                                </div>
                            </div>
                            <% } %>
        </div>
    </div>
</div>

<style>
    .hover-shadow {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>