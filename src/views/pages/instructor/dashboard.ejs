<div class="container">
    <h1 class="mb-4">Instructor Dashboard</h1>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Students</h5>
                    <h2 class="display-4">
                        <%= stats.totalStudents %>
                    </h2>
                    <p class="text-muted">Students in your class</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Completions</h5>
                    <h2 class="display-4">
                        <%= stats.totalCompletions %>
                    </h2>
                    <p class="text-muted">Questions completed by students</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Active Students</h5>
                    <h2 class="display-4">
                        <%= stats.uniqueStudentsWithCompletions %>
                    </h2>
                    <p class="text-muted">Students with completed work</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Navigation -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">Quick Navigation</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/instructor/students"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-people me-2"></i> My Students
                                <p class="text-muted mb-0 small">View and manage your students</p>
                            </div>
                            <i class="bi bi-chevron-right"></i>
                        </a>
                        <a href="/instructor/submissions"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-diagram-3 me-2"></i> ER Diagram Submissions
                                <p class="text-muted mb-0 small">Review student ER diagram submissions</p>
                            </div>
                            <i class="bi bi-chevron-right"></i>
                        </a>
                        <a href="/instructor/export/students"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-download me-2"></i> Export Student Matrix
                                <p class="text-muted mb-0 small">Download detailed completion matrix for all students
                                </p>
                            </div>
                            <i class="bi bi-chevron-right"></i>
                        </a>
                        <a href="/instructor/export/summary"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-download me-2"></i> Export Student Summary
                                <p class="text-muted mb-0 small">Download summary of student completion counts</p>
                            </div>
                            <i class="bi bi-chevron-right"></i>
                        </a>
                        <a href="/instructor/course-management/course-sections"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-calendar3 me-2"></i> Course Sections
                                <p class="text-muted mb-0 small">Manage semester-based course sections and export data
                                </p>
                            </div>
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">Recent ER Diagram Submissions</h5>
                </div>
                <div class="card-body">
                    <% if (erSubmissions.length===0) { %>
                        <p class="text-muted text-center">No ER diagram submissions yet.</p>
                        <% } else { %>
                            <div class="list-group list-group-flush">
                                <% erSubmissions.slice(0, 5).forEach(submission=> { %>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>
                                                <%= submission.user.firstName || '' %>
                                                    <%= submission.user.lastName || '' %>
                                            </strong>
                                            <br>
                                            <small class="text-muted">
                                                <%= submission.user.email %>
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <small class="text-muted">
                                                <%= new Date(submission.createdAt).toLocaleDateString() %>
                                            </small>
                                            <br>
                                            <a href="/instructor/submissions/<%= submission.id %>"
                                                class="btn btn-sm btn-outline-primary">View</a>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                            <% if (erSubmissions.length> 5) { %>
                                <div class="text-center mt-3">
                                    <a href="/instructor/submissions" class="btn btn-outline-primary btn-sm">View All
                                        Submissions</a>
                                </div>
                                <% } %>
                                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Students -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Students</h5>
            <a href="/instructor/students" class="btn btn-primary btn-sm">View All Students</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (students.length===0) { %>
                            <tr>
                                <td colspan="4" class="text-center py-4">No students assigned yet</td>
                            </tr>
                            <% } else { %>
                                <% students.slice(0, 10).forEach(student=> { %>
                                    <tr>
                                        <td>
                                            <%= student.firstName || '' %>
                                                <%= student.lastName || '' %>
                                                    <% if (!student.firstName && !student.lastName) { %>
                                                        <span class="text-muted">Not provided</span>
                                                        <% } %>
                                        </td>
                                        <td>
                                            <%= student.email %>
                                        </td>
                                        <td>
                                            <%= new Date(student.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <a href="/instructor/students/<%= student.id %>"
                                                class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View Progress
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item {
        transition: all 0.2s ease-in-out;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
    }

    .card {
        transition: all 0.2s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
</style>