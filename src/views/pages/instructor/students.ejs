<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/instructor/dashboard">Instructor Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">My Students</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Students</h1>
        <div class="btn-group" role="group" aria-label="Export options">
            <a href="/instructor/export/students" class="btn btn-outline-primary" title="Export Student Matrix">
                <i class="bi bi-download me-1"></i> Export Matrix
            </a>
            <a href="/instructor/export/summary" class="btn btn-outline-secondary" title="Export Student Summary">
                <i class="bi bi-download me-1"></i> Export Summary
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Students (<%= totalStudents %>)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Completions</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (students.length===0) { %>
                            <tr>
                                <td colspan="6" class="text-center py-4">No students assigned to you yet</td>
                            </tr>
                            <% } else { %>
                                <% students.forEach(student=> { %>
                                    <tr>
                                        <td>
                                            <%= student.id %>
                                        </td>
                                        <td>
                                            <% if (student.firstName || student.lastName) { %>
                                                <%= student.firstName || '' %>
                                                    <%= student.lastName || '' %>
                                                        <% } else { %>
                                                            <span class="text-muted">Not provided</span>
                                                            <% } %>
                                        </td>
                                        <td>
                                            <%= student.email %>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                <%= student.dataValues.completionCount || 0 %>
                                            </span>
                                        </td>
                                        <td>
                                            <%= new Date(student.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/instructor/students/<%= student.id %>"
                                                    class="btn btn-sm btn-outline-primary"
                                                    title="View Student Progress">
                                                    <i class="bi bi-eye"></i> Progress
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <% if (totalPages> 1) { %>
            <div class="card-footer d-flex justify-content-center">
                <nav aria-label="Student pagination">
                    <ul class="pagination mb-0">
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="/instructor/students?page=1&limit=<%= limit %>"
                                aria-label="First">
                                <span aria-hidden="true">&laquo;&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link"
                                href="/instructor/students?page=<%= currentPage - 1 %>&limit=<%= limit %>"
                                aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        <% let startPage=Math.max(1, currentPage - 2); let endPage=Math.min(totalPages, startPage + 4);
                            if (endPage - startPage < 4) { startPage=Math.max(1, endPage - 4); } for (let i=startPage; i
                            <=endPage; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="/instructor/students?page=<%= i %>&limit=<%= limit %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>

                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="/instructor/students?page=<%= currentPage + 1 %>&limit=<%= limit %>"
                                        aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="/instructor/students?page=<%= totalPages %>&limit=<%= limit %>"
                                        aria-label="Last">
                                        <span aria-hidden="true">&raquo;&raquo;</span>
                                    </a>
                                </li>
                    </ul>
                </nav>
            </div>
            <% } %>
    </div>
</div>

<style>
    .card {
        transition: all 0.2s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .table tbody tr {
        transition: background-color 0.2s;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>