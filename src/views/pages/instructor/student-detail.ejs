<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/instructor/dashboard">Instructor Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/instructor/students">My Students</a></li>
            <li class="breadcrumb-item active" aria-current="page">Student Progress</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Student Progress</h1>
        <a href="/instructor/students" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Students
        </a>
    </div>

    <!-- Student Information -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Student Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Name:</strong>
                        <%= student.firstName || '' %>
                            <%= student.lastName || '' %>
                    </p>
                    <p><strong>Email:</strong>
                        <%= student.email %>
                    </p>
                </div>
                <div class="col-md-6">
                    <p><strong>Joined:</strong>
                        <%= new Date(student.createdAt).toLocaleDateString() %>
                    </p>
                    <p><strong>Total Completions:</strong> <span class="badge bg-info">
                            <%= completions.length %>
                        </span></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Completion Progress -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Question Completions</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Topic</th>
                            <th>Question</th>
                            <th>Completed</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (completions.length===0) { %>
                            <tr>
                                <td colspan="4" class="text-center py-4">No completions yet</td>
                            </tr>
                            <% } else { %>
                                <% completions.forEach(completion=> { %>
                                    <tr>
                                        <td>
                                            <% if (completion.question && completion.question.topic) { %>
                                                <%= completion.question.topic.name %>
                                                    <% } else { %>
                                                        <span class="text-muted">Unknown Topic</span>
                                                        <% } %>
                                        </td>
                                        <td>
                                            <% if (completion.question) { %>
                                                Q<%= completion.question.questionNumber %>
                                                    <% } else { %>
                                                        <span class="text-muted">Question not found</span>
                                                        <% } %>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">
                                                <%= new Date(completion.completedAt).toLocaleDateString() %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (completion.diagramImage) { %>
                                                <span class="badge bg-primary">ER Diagram</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">SQL</span>
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- ER Diagram Submissions -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">ER Diagram Submissions</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Question</th>
                            <th>Status</th>
                            <th>AI Score</th>
                            <th>Admin Score</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (erSubmissions.length===0) { %>
                            <tr>
                                <td colspan="6" class="text-center py-4">No ER diagram submissions yet</td>
                            </tr>
                            <% } else { %>
                                <% erSubmissions.forEach(submission=> { %>
                                    <tr>
                                        <td>
                                            <% if (submission.question) { %>
                                                <div>
                                                    <strong>
                                                        <%= submission.question.topic ? submission.question.topic.name
                                                            : 'Unknown Topic' %>
                                                    </strong>
                                                    <br>
                                                    <small class="text-muted">Q<%= submission.question.questionNumber %>
                                                            </small>
                                                </div>
                                                <% } else { %>
                                                    <span class="text-muted">Question not found</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <% if (submission.status==='pending' ) { %>
                                                <span class="badge bg-warning">Pending</span>
                                                <% } else if (submission.status==='evaluated' ) { %>
                                                    <span class="badge bg-info">Evaluated</span>
                                                    <% } else if (submission.status==='reviewed' ) { %>
                                                        <span class="badge bg-success">Reviewed</span>
                                                        <% } %>
                                        </td>
                                        <td>
                                            <% if (submission.aiScore !==null) { %>
                                                <span class="badge bg-primary">
                                                    <%= submission.aiScore %>/10
                                                </span>
                                                <% } else { %>
                                                    <span class="text-muted">-</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <% if (submission.adminScore !==null) { %>
                                                <span class="badge bg-success">
                                                    <%= submission.adminScore %>/10
                                                </span>
                                                <% } else { %>
                                                    <span class="text-muted">-</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <%= new Date(submission.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/instructor/submissions/<%= submission.id %>"
                                                    class="btn btn-sm btn-outline-primary" title="View Submission">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.2s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .table tbody tr {
        transition: background-color 0.2s;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>