            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/topics">Topics</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <% if (locals.user) { %>
                    <% if (locals.user.isAdmin===true) { %>
                        <!-- Admin Navigation -->
                        <li class="nav-item">
                            <a class="nav-link" href="/admin" title="Admin Dashboard">
                                <i class="bi bi-speedometer2 me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users" title="User Management">
                                <i class="bi bi-people me-1"></i>Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/er-diagrams/admin/submissions" title="ER Diagram Submissions">
                                <i class="bi bi-diagram-3 me-1"></i>Submissions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile" title="Profile">
                                <i class="bi bi-person me-1"></i>
                                <%= locals.user.firstName %>
                            </a>
