                        <li class="nav-item">
                            <a class="nav-link" href="/logout" title="Logout">
                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                            </a>
                        </li>
                        <% } else { %>
                            <!-- Regular User Navigation -->
                            <li class="nav-item">
                                <a class="nav-link" href="/profile">
                                    <%= locals.user.firstName %>
                                        <%= locals.user.lastName %>
